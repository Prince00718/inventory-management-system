@model IEnumerable<InventoryMVC.Models.ViewModels.ProductVM>

<h2>Products</h2>

<a asp-action="Create" class="btn btn-success">Add Product</a>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Actions</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>@p.Quantity</td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@p.Id">Delete</a>
            </td>
        </tr>
    }
</table>
@model InventoryMVC.Models.ViewModels.ProductVM

@{
    ViewData["Title"] = "Edit Product";
    var categories = ViewBag.Categories as List<InventoryMVC.Models.ViewModels.CategoryVM>;
}

<style>
    .form-card {
        max-width: 520px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        animation: fadeIn 0.5s ease-in-out;
    }

    .form-title {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
    }

    .btn-secondary {
        border-radius: 8px;
        padding: 10px 20px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="form-card">

    <div class="form-title">Edit Product</div>

    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var c in categories)
                {
                    <option value="@c.Id" selected="@(c.Id == Model.CategoryId)">
                        @c.Name
                    </option>
                }
            </select>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>

    </form>
</div>
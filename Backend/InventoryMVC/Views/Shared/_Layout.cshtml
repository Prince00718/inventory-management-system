@{
    var username = User.Identity?.Name ?? "Admin";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Inventory Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (✅ FIX FOR ARROW ICON) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark bg-dark">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <span class="nav-link text-white">
                        Welcome, <b>@username</b>
                    </span>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/Account/Logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a asp-controller="Dashboard" asp-action="Index" class="brand-link text-center">
                <span class="brand-text font-weight-bold">Inventory Admin</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu">

                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <!-- Products -->
                        <li class="nav-item">
                            <a asp-controller="Products" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-box"></i>
                                <p>Products</p>
                            </a>
                        </li>

                        <!-- Categories -->
                        <li class="nav-item">
                            <a asp-controller="Categories" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-tags"></i>
                                <p>Categories</p>
                            </a>
                        </li>

                        <!-- Sales -->
                        <li class="nav-item">
                            <a asp-controller="Sales" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-arrow-up-circle"></i>
                                <p>Sales</p>
                            </a>
                        </li>

                        <!-- Purchases (✅ FIXED ROUTING) -->
                        <li class="nav-item">
                            <a asp-controller="Purchases" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-arrow-down-circle"></i>
                                <p>Purchases</p>
                            </a>
                        </li>

                        <!-- Reports -->
                        <li class="nav-item">
                            <a asp-controller="Reports" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-file"></i>
                                <p>Reports</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content -->
        <div class="content-wrapper p-4">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer text-center">
            <strong>Inventory Management System</strong>
        </footer>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>